<div class="row">
    <div class="col s12 m8">
        <h3>{{story.title}}
            <small>{{{editIcon story.user user story._id false}}}</small>
        </h3>
        <div class="card story">
            <div class="card-content">
                <span class="card-title">Uploaded on {{formatDate date 'DD-MM-YYYY'}}</span>
                {{{story.body}}}
            </div>
        </div>
    </div>
    <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content">
                <div class="white-text chip green">
				    <span>{{getInitials story.user.firstName}}</span>
				</div>
                <span class="card-title">{{story.user.displayName}}</span>
                <h1 src="{{story.user.firstName}}"></h1>
            </div>
            <div class="card-action">
                <a href="/stories/user/{{story.user._id}}">More From {{story.user.firstName}}</a>
            </div>
        </div>
    </div>
</div>